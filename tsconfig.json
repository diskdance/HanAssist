{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "sourceMap": true,
        "outDir": "./dist/",
        "rootDir": "./src/",
        "noEmit": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "./src/**/*.ts",
        "./node_modules/types-mediawiki"
    ],
    "exclude": []
}